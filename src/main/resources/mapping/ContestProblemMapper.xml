<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tustcs.matrix.dao.ContestProblemMapper" >
  <resultMap id="BaseResultMap" type="com.tustcs.matrix.entity.ContestProblem" >
    <result column="problem_id" property="problemId" jdbcType="INTEGER" />
    <result column="contest_id" property="contestId" jdbcType="INTEGER" />
    <result column="title" property="title" jdbcType="CHAR" />
    <result column="num" property="num" jdbcType="INTEGER" />
  </resultMap>
  
  <!--<insert id="add" parameterType="java.util.List">
    insert into contest_problem(contest_id,problem_id,title,num)
    VALUES 
    <foreach collection="list" item="item" index="index" separator=";">
      (#{item.contest_id},#{item.problem_id},#{item.title},#{item.num})
    </foreach>
  </insert> -->
  <select id="selectProblemsForContest" resultType="com.tustcs.matrix.dto.ContestProblemDTO">
    select cp.contest_id,cp.problem_id,cp.title,s.result,p.submit from contest_problem as cp
     inner join problem as p on cp.problem_id=p.problem_id
    left join  solution as s on s.problem_id=p.problem_id and cp.contest_id=s.contest_id
    and result=4
    where cp.contest_id=#{contestId}
  </select>

  <insert id="insert" parameterType="com.tustcs.matrix.entity.ContestProblem" >
    insert into contest_problem (problem_id, contest_id, title, 
      num)
    values (#{problemId,jdbcType=INTEGER}, #{contestId,jdbcType=INTEGER},(SELECT title from problem where problem_id=#{problemId}),
      #{num,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" parameterType="com.tustcs.matrix.entity.ContestProblem" >
    insert into contest_problem
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="problemId != null" >
        problem_id,
      </if>
      <if test="contestId != null" >
        contest_id,
      </if>
      <if test="title != null" >
        title,
      </if>
      <if test="num != null" >
        num,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="problemId != null" >
        #{problemId,jdbcType=INTEGER},
      </if>
      <if test="contestId != null" >
        #{contestId,jdbcType=INTEGER},
      </if>
      <if test="title != null" >
        #{title,jdbcType=CHAR},
      </if>
      <if test="num != null" >
        #{num,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>

  <select id="selectProblemId" resultType="java.lang.Integer">
    SELECT problem_id
    from contest_problem
    where contest_id=#{contestId}
  </select>

  <select id="selectProblem" resultType="com.tustcs.matrix.entity.ContestProblem">
    select *from contest_problem
    where contest_id=#{contestId}
  </select>
</mapper>